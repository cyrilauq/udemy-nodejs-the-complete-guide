extends ../layouts/main-layout.pug 

block style 
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")

block main
    main 
        if(errorMessage)
            div.user-message.user-message--error #{errorMessage}
        form.login-form(action="/login", method="post")
            div.form-control
                label(for="email") E-mail 
                input#email(type="email", name="email", value=oldInput.email, class=validationErrors.find(e => e === 'email' || e === '') ? "invalid" : "")
            div.form-control
                label(for="password") Password 
                input#password(type="password", name="password", value=oldInput.password, class=validationErrors.find(e => e === 'password' || e === '') ? "invalid" : "")
            +csrf-input() 
            button.btn(type="submit") Login 
        div.centered 
            a(href="/reset-pwd") Reset password 