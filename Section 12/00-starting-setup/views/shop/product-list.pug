extends ../layouts/main-layout.pug 

block style 
    link(rel="stylesheet", href="/css/product.css")

block main
    main 
        if prods.length > 0
            div.grid 
                each prod in prods 
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{prod.title}
                        div.card__image 
                            img(src=prod.imageUrl, 
                                alt=prod.title)
                        div.card__content 
                            h2.product__price #{prod.price}
                            p.product__description #{prod.description}
                        div.card__actions 
                            a.btn(href="/products/"+prod._id) Details 
                            form(action="/cart", method="post")
                                button.btn(type="submit") Add to Cart
                                input(type="hidden", name="productId", value=prod._id) 
        else 
            h1 No Products Found!