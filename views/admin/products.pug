extends ../layouts/main-layout.pug 

block style 
    link(rel="stylesheet", href="/css/product.css")

block main
    main 
        if prods.length > 0
            div.grid 
                each prod in prods 
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{prod.title}
                        div.card__image 
                            img(src=prod.imageUrl, 
                                alt=prod.title)
                        div.card__content 
                            h2.product__price #{prod.price}
                            p.product__description #{prod.description}
                        div.card__actions 
                            a.btn(href="/admin/edit-product/"+prod._id+"?edit=true") Edit
                            form(action="/admin/delete-product", method="POST")
                                input(type="hidden", name="_csrf", value=csrfToken)
                                input(type="hidden", name="productId", value=prod._id)
                                button.btn(type="submit") Delete 
        else 
            <h1>No Products Found!