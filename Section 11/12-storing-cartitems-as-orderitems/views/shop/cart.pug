extends ../layouts/main-layout.pug 
include ../includes/cart-product

block style 
    link(rel="stylesheet", href="/css/cart.css")

block main
    main 
        if prods.length > 0
            ul.cart__item-list 
                each prod in prods 
                    +cart-product(prod) 
            div.centered
                p Total price: #{totalPrice}
            hr
            div.centered
                form(action="/create-order", method="post") 
                    button.btn(type="submit") Order Now!
        else 
            <h1>Your cart is empty. Go buy something